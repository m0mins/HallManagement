
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Registration.cshtml";
}


<div class="col-md-4">
    
</div>
<div class="col-md-4">
    <h2>Student Registration</h2>
@using (Html.BeginForm("Registration", "Main", FormMethod.Post, new { enctype = "multipart/form-data", name = "reg", id = "reg" }))
    {
    <form role="form">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" name="name" id="name">
        </div>
        <div class="form-group">
            <label for="faculty">Faculty:</label>
            <select id="faculty" class="form-control" name="faculty">


                <option value="Agriculture">Agriculture</option>

                <option value="Business Administration and Management">Business Administration and Management</option>

                <option selected="selected" value="Computer Science and Engineernig">Computer Science and Engineernig</option>

                <option value="Fisheries">Fisheries</option>
                <option value="Animal Science and Veterinary Medicine">Animal Science and Veterinary Medicine</option>
                <option value="Animal Husbandary">Animal Husbandary </option>
                <option value="Disaster Management">Disaster Management</option>
                <option value="Nutrition and Food Science">Nutrition and Food Science</option>
                <option value="Land Management">Land Management</option>



            </select>
        </div>
        <div class="form-group">
            <label for="desig">Designation:</label>
            <select id="desig" class="form-control" name="desig">


                <option value="B.Sc.Ag(Hons)">B.Sc.Ag(Hons)</option>

                <option value="B.Sc.Engg.(CSE)">B.Sc.Engg.(CSE)</option>

                <option selected="selected" value="Masters">Masters</option>

                <option value="B.Sc.Fisheries">B.Sc.Fisheries</option>
                <option value="B.Sc>DM(Hons)">B.Sc>DM(Hons)</option>

                <option value="B.Sc.NFS(Hons)">B.Sc.NFS(Hons)</option>
                <option value="BBA">BBA</option>



            </select>
        </div>
        <div class="form-group">
            <label for="stuid">ID No :</label>
            <input type="text" class="form-control" name="stuid" id="stuid">
        </div>
        <div class="form-group">
            <label for="reg">Regg  No:</label>
            <input type="text" class="form-control" name="reg" id="reg">
        </div>
        <div class="form-group">
            <label for="session">Session :</label>
            <input type="text" class="form-control" name="session" id="session">
        </div>
        <div class="form-group">
            <label for="district">District :</label>
            <input type="text" class="form-control" name="district" id="district">
        </div>
        <div class="form-group">
            <label for="contact">Contact Number :</label>
            <input type="text" class="form-control" name="contact" id="contact">
        </div>
        <div class="form-group">
            <label for="blood">Blood Group:</label>
            <select id="blood" class="form-control" name="blood">
          
                <option value="A+">A+</option>
                @*<option value="A-">A-</option>
                <option value="O+">O+</option>
                <option value="O-">O-</option>*@              
                <option selected="selected" value="B+">B+</option>
                @*<option value="B-">B-</option>
                <option value="AB+">AB+</option>
                <option value="AB-">AB-</option>*@ 

            </select>
        </div>
        <div class="form-group">
            <label for="hall">Hall Name:</label>
            <select id="hall" class="form-control" name="hall">
              
                <option value="Sher E Bangla Hall-1">Sher E Bangla Hall-1</option>             
                <option selected="selected" value="Sher E Bangla Hall-2">Sher E Bangla Hall-2</option>
                <option value="Keramot Ali Hall">Keramot Ali Hall</option>
                <option value="Bangabondhu Hall">Bangabondhu Hall</option>
                <option value="Sufia Kamal Hall">Sufia Kamal Hall</option>
                <option value="Fajilatunnessa Mujib Hall">Fajilatunnessa Mujib Hall</option>
                


            </select>
        </div>
        <div class="form-group">
            <label for="email">Email address:</label>
            <input type="email" class="form-control" name="email" id="email">
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" class="form-control" name="pwd" id="pwd">
        </div>
        <div class="form-group">
            <label for="image">Image:</label>
            <input type="file" class="form-control" name="file" id="file">
        </div>      
        <div class="checkbox">
            <label><input type="checkbox"> Remember me</label>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
}
</div>
<div class="col-md-4">

</div>

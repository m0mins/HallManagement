
@{
    ViewBag.Title = "approveStudent";
    Layout = "~/Views/Shared/_LoginHomeProvost.cshtml";
}

<h2>HallFees</h2>


@foreach (var item in Model)
{
    <table class="table table-bordered">

        <h3 style="text-align:center;font-weight:bold;">Hall Fees Transaction)</h3>
        <thead>
            <tr>
                <th>Student ID</th>
                <th>Student Name</th>
                <th>Student Faculty</th>
                <th>Semester</th>
                <th>Hall</th>
                <th>Amount</th>
                <th>Status</th>


            </tr>
        </thead>

        <tbody>

            <tr>

                <td><span class="pull-left glyphicon glyphicon-calendar">@item.stuid</span></td>
                <td><span class="pull-left glyphicon">@item.name</span></td>
                <td><span class="pull-left glyphicon">@item.faculty</span></td>
                <td><span class="pull-left glyphicon">@item.semester</span></td>
                <td><span class="pull-left glyphicon">@item.hall</span></td>
                <td><span class="pull-left glyphicon">@item.amount</span></td>
                <td><span class="pull-left glyphicon"><p><a href="@Href("~/Provost/approveUpdate/"+item.stuid)"><span class="glyphicon glyphicon-arrow-right" style="color:black; font-size:larger; font-family:'Book Antiqua';">Approve This Student</span></a></p></span></td>
            </tr>
        </tbody>

    </table>
}



